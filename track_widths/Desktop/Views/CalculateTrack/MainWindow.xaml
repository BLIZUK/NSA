<Window x:Class="track_widths.Desktop.Views.CalculateTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:track_widths.Desktop.ViewModels.CalculateTrack"
        xmlns:behaviors="clr-namespace:track_widths.Core.Behavior"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="Калькулятор дорожек печатных плат" Height="450" Width="600">

    <Window.DataContext>
        <viewModels:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="253*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="46*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>

        <!-- ComboBox с привязкой к ViewModel -->
        <ComboBox Grid.Row="1" Grid.Column="2"
                  ItemsSource="{Binding AmperageUnits}"
                  SelectedItem="{Binding SelectedAmperageUnit}"
                  DisplayMemberPath="Name"
                  Margin="3,3,3,0"
                  FontSize="14"
                  Height="48"
                  VerticalAlignment="Top"/>

        <ComboBox Grid.Row="2" Grid.Column="1"
                  ItemsSource="{Binding WidthUnits}"
                  SelectedItem="{Binding SelectedWidthUnits}"
                  DisplayMemberPath="Name"
                  Margin="3,3,3,0"
                  FontSize="14" Height="48"
                  VerticalAlignment="Top"/>

        <ComboBox Grid.Row="3" Grid.Column="2"
                  ItemsSource="{Binding ThicknessUnits}"
                  SelectedItem="{Binding SelectedThicknessUnits}"
                  DisplayMemberPath="Name"
                  Margin="3,3,3,0" 
                  FontSize="14" 
                  Height="48" 
                  VerticalAlignment="Top"/>

        <!-- Отдельные ComboBox для каждой температуры -->
        <ComboBox Grid.Row="4" Grid.Column="2"
                  ItemsSource="{Binding TempUnits}"
                  SelectedItem="{Binding SelectedRiseTempUnit}"
                  DisplayMemberPath="Name"
                  Margin="3,3,3,0" 
                  FontSize="14"
                  Height="48"
                  VerticalAlignment="Top"/>

        <ComboBox Grid.Row="5" Grid.Column="2"
                  ItemsSource="{Binding TempUnits}"
                  SelectedItem="{Binding SelectedAmbientTempUnit}"
                  DisplayMemberPath="Name"
                  Margin="3,3,3,0" 
                  FontSize="14" 
                  Height="48" 
                  VerticalAlignment="Top"/>

        <ComboBox Grid.Row="6" Grid.Column="2"
                  ItemsSource="{Binding LengthUnits}"
                  SelectedItem="{Binding SelectedLengthUnits}"
                  DisplayMemberPath="Name"
                  Margin="3,3,3,0"
                  FontSize="14" 
                  Height="48" 
                  VerticalAlignment="Top"/>

        <!-- TextBox с поведением для плейсхолдера -->
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{StaticResource RequiredField}"
                 Margin="3,3,3,0"
                 Height="48" 
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}">
            <i:Interaction.Behaviors>
                <behaviors:PlaceholderBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>

        <TextBox Grid.Row="3" Grid.Column="1"
                 Text="{StaticResource RequiredField}"
                 Margin="3,3,3,0"
                 Height="48"
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}">
            <i:Interaction.Behaviors>
                <behaviors:PlaceholderBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>

        <TextBox Grid.Row="4" Grid.Column="1"
                 Text="{StaticResource RequiredField}"
                 Margin="3,3,3,0"
                 Height="48" 
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}">
            <i:Interaction.Behaviors>
                <behaviors:PlaceholderBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>

        <TextBox Grid.Row="5" Grid.Column="1"
                 Text="{StaticResource RequiredField}"
                 Margin="3,3,3,0"
                 Height="49" 
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}">
            <i:Interaction.Behaviors>
                <behaviors:PlaceholderBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>

        <TextBox Grid.Row="6" Grid.Column="1"
                 Text="{StaticResource RequiredField}"
                 Margin="3,3,3,0"
                 Height="48" 
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}">
            <i:Interaction.Behaviors>
                <behaviors:PlaceholderBehavior/>
            </i:Interaction.Behaviors>
        </TextBox>

        <!--- Labels -->
        
        <Label Content="{StaticResource InputLabel}" 
               Margin="0,9,0,10" 
               FontSize="14" 
               HorizontalAlignment="Center" 
               Width="126" 
               Grid.Column="1"/>
        
        <Label Content="{StaticResource AmperageLabel}" 
               Margin="10,5,0,5" 
               Grid.Row="1" 
               FontSize="14" 
               HorizontalAlignment="Left"
               Width="142"/>

        <Label Content="{StaticResource WidthLabel}" 
               Grid.Row="2" 
               FontSize="14" 
               Margin="10,5,0,5" 
               HorizontalAlignment="Left" 
               Width="202"/>

        <Label Content="{StaticResource ThicknessLabel}" 
               Margin="10,5,0,5"
               Grid.Row="3" 
               FontSize="14"
               HorizontalAlignment="Left"
               Width="132"/>

        <Label Content="{StaticResource RiseTempLabel}" 
               Margin="10,5,0,5" 
               Grid.Row="4" 
               FontSize="14" 
               HorizontalAlignment="Left" 
               Width="178"/>

        <Label Content="{StaticResource AmbientTempLabel}"  
               Margin="10,5,0,5"
               Grid.Row="6" 
               FontSize="14" 
               HorizontalAlignment="Left" 
               Width="115"/>

        <Label Content="{StaticResource LengthLabel}" 
               Margin="10,5,0,5"
               Grid.Row="5" 
               FontSize="14" 
               HorizontalAlignment="Left" 
               Width="229"/>

        <!-- Кнопка с привязкой команды -->
        <Button Grid.Row="7" Grid.Column="1"
                Command="{Binding CalculateCommand}"
                Margin="1,8,32,0" 
                RenderTransformOrigin="0.5,0.5" 
                Content="Расчет" 
                Height="36" 
                VerticalAlignment="Top"
                Style="{StaticResource PrimaryButtonStyle}">
        </Button>
    </Grid>
</Window>