<Window x:Class="track_widths.Desktop.Views.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результаты расчета" Height="450" Width="600"
        WindowStartupLocation="CenterOwner" Icon="/Desktop/Views/CalculateTrack/calculator_14103.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="ResultsTextBox" 
                 TextWrapping="Wrap" 
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 Padding="10"/>

        <Button Grid.Row="1" Content="Копировать в буфер" 
                Margin="10" Padding="10" HorizontalAlignment="Center"
                Click="CopyButton_Click"/>
    </Grid>
</Window>