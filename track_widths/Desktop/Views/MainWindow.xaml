<Window x:Class="track_widths.Desktop.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:track_widths.Desktop.Views"
        mc:Ignorable="d"
        Title="Калькулятор дорожек печатных плат" Height="450" Width="600">
    
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="253*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="46*"/>
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="24*"/>
        </Grid.RowDefinitions>
        
        <!--Диологовые окна выбора-->
        
        <ComboBox x:Name="amperageCombobox" 
                  DisplayMemberPath="Name"
                  SelectedValuePath="Multiplier"
                  Grid.Row="1"
                  Grid.Column="2"
                  Margin="3,3,3,0"
                  FontSize="14"
                  Height="48"
                  VerticalAlignment="Top"/>
        
        <ComboBox x:Name="widthCombobox"
                  DisplayMemberPath="Name"
                  SelectedValuePath="Multiplier"
                  Margin="3,3,3,0"
                  Grid.Row="2" Grid.Column="1" 
                  FontSize="14" Height="48"
                  VerticalAlignment="Top"/>

        <ComboBox x:Name="thicknessCombobox"
                  DisplayMemberPath="Name" 
                  SelectedValuePath="Multiplier" 
                  Grid.Row="3" 
                  Grid.Column="2" 
                  Margin="3,3,3,0" 
                  FontSize="14" 
                  Height="48" 
                  VerticalAlignment="Top"/>
        
        <ComboBox x:Name="riseTempCombobox" 
                  DisplayMemberPath="Name" 
                  SelectedValuePath="Multiplier" 
                  Grid.Row="4" 
                  Grid.Column="2" 
                  Margin="3,3,3,0" 
                  FontSize="14"
                  Height="48"
                  VerticalAlignment="Top"/>
        
        <ComboBox x:Name="ambientTempCombobox" 
                  DisplayMemberPath="Name" 
                  SelectedValuePath="Multiplier" 
                  Grid.Row="5" 
                  Grid.Column="2" 
                  Margin="3,3,3,0" 
                  FontSize="14" 
                  Height="48" 
                  VerticalAlignment="Top"/>

        <ComboBox x:Name="lengthCombobox" 
                  DisplayMemberPath="Name"
                  SelectedValuePath="Multiplier" 
                  Grid.Row="6"
                  Grid.Column="2" 
                  Margin="3,3,3,0"
                  FontSize="14" 
                  Height="48" 
                  VerticalAlignment="Top"/>

        <!--Текстовые окна-->
        
        <TextBox x:Name="amperageTextBox"
                 Margin="3,3,3,0"
                 TextWrapping="Wrap"
                 Text=" "
                 Grid.Row="1" 
                 Grid.Column="1" 
                 RenderTransformOrigin="0.5,0.5" 
                 Height="48" 
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}">
        </TextBox>

        <TextBox x:Name="thicknessTextBox"
                 Margin="3,3,3,0"
                 TextWrapping="Wrap"
                 Text=" "
                 Grid.Row="3" 
                 Grid.Column="1" 
                 RenderTransformOrigin="0.5,0.5"
                 Height="48"
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}" >
        </TextBox>

        <TextBox x:Name="riseTempTextBox"
                 Margin="3,3,3,0"
                 TextWrapping="Wrap"
                 Text=" "
                 Grid.Row="4" 
                 Grid.Column="1" 
                 RenderTransformOrigin="0.5,0.5" 
                 Height="48" 
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}">
        </TextBox>

        <TextBox x:Name="ambientTempTextBox"
                 Margin="3,3,3,0"
                 TextWrapping="Wrap"
                 Text=" "
                 Grid.Row="5"
                 Grid.Column="1" 
                 RenderTransformOrigin="0.5,0.5"
                 Height="49" 
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}">
        </TextBox>

        <TextBox x:Name="lengthTextBox"
                 Margin="3,3,3,0"
                 TextWrapping="Wrap"
                 Text=" "
                 Grid.Row="6"
                 Grid.Column="1" 
                 RenderTransformOrigin="0.5,0.5" 
                 Height="48" 
                 VerticalAlignment="Top"
                 Style="{StaticResource InputFieldStyle}" >
        </TextBox>

        <!---Надписи-->
        
        <Label Content="Максимальный ток :" 
               Margin="94,7,0,6" 
               Grid.Row="1" 
               FontSize="14" 
               HorizontalAlignment="Left"
               Width="142"/>
       
        <Label Content="Входные данные:" 
               Margin="0,9,0,10" 
               FontSize="14" 
               HorizontalAlignment="Center" 
               Width="126" 
               Grid.Column="1"/>
        
        <Label Content="Единицы измерения ширины:" 
               Grid.Row="2" 
               FontSize="14" 
               Margin="33,7,0,6" 
               HorizontalAlignment="Left" 
               Width="202"/>
        
        <Label Content="Толщина дорожки:" 
               Margin="103,7,0,6"
               Grid.Row="3" 
               FontSize="14"
               HorizontalAlignment="Left"
               Width="132"/>
        
        <Label Content="Повышение температуры:" 
               Margin="59,10,0,9" 
               Grid.Row="4" 
               FontSize="14" 
               HorizontalAlignment="Left" 
               Width="178"/>
        
        <Label Content="Длина дорожки:" 
               Margin="121,7,0,4"
               Grid.Row="6" 
               FontSize="14" 
               HorizontalAlignment="Left" 
               Width="115"/>
        
        <Label Content="Температура окружающей среды:" 
               Margin="9,10,0,9"
               Grid.Row="5" 
               FontSize="14" 
               HorizontalAlignment="Left" 
               Width="229"/>

        <!--Кнопки-->

        <Button x:Name="CountButton"
                Click="CountButton_Click"
                Margin="1,8,32,0" 
                Grid.Row="7" 
                Grid.Column="1" 
                RenderTransformOrigin="0.5,0.5" 
                Content="Расчет" 
                Height="36" 
                VerticalAlignment="Top"
                Style="{StaticResource PrimaryButtonStyle}">
        </Button>
    </Grid>
</Window>
